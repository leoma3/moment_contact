<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leo.momentcontact.LandingActivity">

    <ImageView
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/montact_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userEditText"
        android:layout_alignTop="@+id/userTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/registerButton"
        android:layout_toRightOf="@+id/registerButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:id="@+id/userTextView"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/passTextView"
        android:layout_alignEnd="@+id/passTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/passTextView"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/userTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/passEditText"
        android:layout_toStartOf="@+id/passEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passEditText"
        android:layout_alignTop="@+id/passTextView"
        android:layout_alignRight="@+id/userEditText"
        android:layout_alignEnd="@+id/userEditText"
        android:layout_alignLeft="@+id/userEditText"
        android:layout_alignStart="@+id/userEditText" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Register"
        android:id="@+id/registerButton"
        android:layout_marginTop="37dp"
        android:onClick="register"
        android:layout_below="@+id/passEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Login"
        android:id="@+id/LoginButton"
        android:layout_alignTop="@+id/registerButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="login"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="insert"
        android:id="@+id/button"
        android:onClick="addSomething"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view all"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:onClick="viewResults"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        android:id="@+id/button3"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:onClick="updateButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        android:onClick="locationButton"/>




</RelativeLayout>
