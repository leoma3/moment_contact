<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leo.momentcontact.PlacesActivity">

    <TextView
        android:id="@+id/profileNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:text="Person&apos;s Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/memberSinceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/profileNameTextView"
        android:text="Member Since 1987"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <RelativeLayout
        android:id="@+id/stanleyGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:onClick="stanleyGallery">

        <TextView
            android:id="@+id/stanleyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:text="Stanley Park"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <ProgressBar
            android:id="@+id/stanleyProgressBar"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:layout_weight="0.61"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@+id/stanleyTextView"
            android:layout_toEndOf="@+id/stanleyTextView"
            android:layout_alignTop="@+id/stanleyTextView"
            android:layout_alignBottom="@+id/stanleyTextView" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/gastownGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:onClick="gastownGallery">

        <TextView
            android:id="@+id/gasTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:text="Gastown"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <ProgressBar
            android:id="@+id/gasProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gasTextView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/gasTextView"
            android:indeterminate="false"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4.66"
            android:layout_toEndOf="@+id/gasTextView"
            android:layout_toRightOf="@+id/gasTextView" />

    </RelativeLayout>


</RelativeLayout>
